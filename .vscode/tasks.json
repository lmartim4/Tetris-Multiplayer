{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Server Debug",
            "type": "shell",
            "command": "make",
            "args": [
                "server_build_debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run Client Debug",
            "type": "shell",
            "command": "make",
            "args": [
                "client_build_debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}