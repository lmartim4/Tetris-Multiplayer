{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug Tetris",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/tout", // Altere para o caminho do binário gerado
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Habilitar formatação para gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "preLaunchTask": "build"
      }
  ]
}
